<?xml version="1.0" encoding="euc-kr"?>
<!-- /WEB-INF/decorators.xml -->
<decorators defaultdir="/decorator">
	<decorator name="main" page="decorator.jsp">  <!-- 테두리 설정할 path를 설정. -->
		<pattern>/project1/member/*</pattern>
		<pattern>/project1/board/*</pattern>
	</decorator>
	<!-- layout 제외하기 설정. -->
	<excludes>  <!-- 테두리 설정하지 않을 path 설정. -->
		<pattern>/project1/board/main*</pattern>
		<pattern>/project1/board/file*</pattern>
		<pattern>/project1/member/*</pattern>
	</excludes>
</decorators>
